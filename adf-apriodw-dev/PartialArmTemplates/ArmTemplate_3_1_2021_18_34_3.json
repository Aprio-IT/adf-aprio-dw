{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-apriodw-dev"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Start Resources')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Scale Azure Database",
						"type": "ExecutePipeline",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"pipeline": {
								"referenceName": "Scale Azure Database",
								"type": "PipelineReference"
							},
							"waitOnCompletion": true,
							"parameters": {
								"TenantID": {
									"value": "@pipeline().globalParameters.aprioTenantID",
									"type": "Expression"
								},
								"SubscriptionID": {
									"value": "@pipeline().globalParameters.aprioSubscriptionID",
									"type": "Expression"
								},
								"ResourceGroup": {
									"value": "@pipeline().globalParameters.azureResourceGroup",
									"type": "Expression"
								},
								"Server": {
									"value": "@pipeline().globalParameters.azureSQLDbServer",
									"type": "Expression"
								},
								"database": {
									"value": "@pipeline().globalParameters.azureSQLDbDatabase",
									"type": "Expression"
								},
								"skuName": "S3",
								"skuTier": "Standard",
								"apiVersion": "2019-06-01-preview"
							}
						}
					},
					{
						"name": "Change State Azure AS",
						"type": "ExecutePipeline",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"pipeline": {
								"referenceName": "Change State Azure AS",
								"type": "PipelineReference"
							},
							"waitOnCompletion": true,
							"parameters": {
								"TenantID": {
									"value": "@pipeline().globalParameters.aprioTenantID",
									"type": "Expression"
								},
								"SubscriptionID": {
									"value": "@pipeline().globalParameters.aprioSubscriptionID",
									"type": "Expression"
								},
								"ResourceGroup": {
									"value": "@pipeline().globalParameters.azureResourceGroup",
									"type": "Expression"
								},
								"Server": {
									"value": "@pipeline().globalParameters.azureAnalysisServicesServer",
									"type": "Expression"
								},
								"desiredState": "Succeeded",
								"action": "resume"
							}
						}
					}
				],
				"folder": {
					"name": "Azure Management"
				},
				"annotations": []
			},
			"dependsOn": []
		}
	]
}